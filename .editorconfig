# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8-bom
trim_trailing_whitespace = true
end_of_line = crlf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp}]
tab_width = 4
indent_size = 4
indent_style = space
